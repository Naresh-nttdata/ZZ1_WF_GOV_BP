<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:macros="sap.fe.macros" xmlns:macrosTable="sap.fe.macros.table"
    xmlns:html="http://www.w3.org/1999/xhtml" controllerName="gwm.coremytask.ext.main.Main">
    <Page id="Main" title="{i18n>MainTitle}">
        <content>
            <VBox id = "coremytaskHeader">
                <macros:FilterBar id="coremytaskFilterBar" metaPath="@com.sap.vocabularies.UI.v1.SelectionFields"/>
                <macros:Table id = "coremytaskTable" metaPath="@com.sap.vocabularies.UI.v1.LineItem" filterBar="coremytaskFilterBar" rowPress=".onRowPress" readOnly="true">
                    <macros:actions>
                                <macrosTable:Action
                                    key="customCreateRequest"
                                    text="{i18n>createRequest}"
                                    press=".createRequest"
                                    placement="After"
                                    anchor="DataFieldForAction::Service.toggleBoolean"
							/> 
                                <macrosTable:Action
                                    key="customDeleteRequest"
                                    text="{i18n>deleteRequest}"
                                    press=".onRemoveRequest"
                                    placement="After"
                                    anchor="DataFieldForAction::Service.toggleBoolean"
                                    requiresSelection="true"
							/>                             
                    </macros:actions>
                </macros:Table>
            </VBox>  
        </content>
    </Page>
</mvc:View>