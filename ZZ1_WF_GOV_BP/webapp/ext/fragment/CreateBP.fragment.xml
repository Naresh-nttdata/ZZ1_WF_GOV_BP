<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
    xmlns:u="sap.ui.unified"
    xmlns:fs="sap.ui.layout.form"
    xmlns:layout="sap.ui.layout"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="wizardDialog"
        title="{createBP>/DialogTitle}"
        titleAlignment="Center"
        contentHeight="100%"
        contentWidth="100%"
    >
        <IconTabBar
            id="idIconTabBarNoIcons"
            select="onTabSelect"
        >
            <items>
                <!-- Header Tab -->
                <IconTabFilter
                    text="{i18n>Header}"
                    key="Header"
                >
                    <f:SimpleForm
                        id="SimpleFormChange354"
                        editable="true"
                        layout="ResponsiveGridLayout"
                        labelSpanXL="3"
                        labelSpanL="3"
                        labelSpanM="3"
                        labelSpanS="12"
                        adjustLabelSpan="false"
                        emptySpanXL="4"
                        emptySpanL="4"
                        emptySpanM="4"
                        emptySpanS="0"
                        columnsXL="1"
                        columnsL="1"
                        columnsM="1"
                        singleContainerFullSize="false"
                    >
                        <f:content>
                            <!-- Business Partner Type -->
                            <Label
                                id="labelBusinessPartnerForm"
                                text="{i18n>BusinessPartnerType}"
                                required="true"
                            />
                            <ComboBox
                                id="comboBoxBusinessPartnerForm"
                                change="onBPTypeSelect"
                                selectedKey="{createBP>/BusinessPartnerType}"
                            >
                                <items>
                                    <core:Item
                                        id="ResearchCustomerBPForm"
                                        key="REAS"
                                        text="{i18n>ResearchCustomer}"
                                    />
                                    <core:Item
                                        id="NonResearchCustomerBPForm"
                                        key="COMM"
                                        text="{i18n>NonResearchCustomer}"
                                    />
                                </items>
                            </ComboBox>
                            <!-- Business Partner Category -->
                            <Label
                                id="labelBusinessPartnerCategory"
                                text="{i18n>BusinessPartnerCategory}"
                                required="true"
                            />
                            <ComboBox
                                id="comboBoxBusinessPartnerCategory"
                                change="onBPCategorySelect"
                                selectedKey="{createBP>/BusinessPartnerCategory}"
                            >
                                <items>
                                    <core:Item
                                        id="PersonCustomerBPCategory"
                                        key="1"
                                        text="{i18n>Person}"
                                    />
                                    <core:Item
                                        id="organisationCustomerBPCategory"
                                        key="2"
                                        text="{i18n>Organization}"
                                    />
                                </items>
                            </ComboBox>
                            <!-- Reference Business Partner -->
                            <Label
                                text="{i18n>ReferrenceBusinessPartner}"
                                visible="{createBP>/isReferenceBusinessPartnerEnabled}"
                            />
                            <Input
                                id="ReferrenceBusinessPartnerInput"
                                placeholder="Enter partner"
                                showSuggestion="true"
                                value="{createBP>/ReferrenceBusinessPartner}"
                                showTableSuggestionValueHelp="false"
                                suggest="onSuggest"
                                visible="{createBP>/isReferenceBusinessPartnerEnabled}"
                                suggestionRows="{/ExistingBusinessPartner}"
                                suggestionItemSelected="onSelectedSuggestion"
                            >
                                <suggestionColumns>
                                    <Column>
                                        <Label text="BusinessPartner" />
                                    </Column>
                                    <Column hAlign="Center">
                                        <Label text="SalesOrganization" />
                                    </Column>
                                    <Column hAlign="Center">
                                        <Label text="CompanyCode" />
                                    </Column>
                                    <Column hAlign="Center">
                                        <Label text="DistributionChannel" />
                                    </Column>
                                    <Column hAlign="End">
                                        <Label text="Division" />
                                    </Column>
                                </suggestionColumns>

                                <suggestionRows>
                                    <ColumnListItem>
                                        <Label text="{BusinessPartner}" />
                                        <Label text="{SalesOrganization}" />
                                        <Label text="{CompanyCode}" />
                                        <Label text="{DistributionChannel}" />
                                        <Label text="{Division}" />
                                    </ColumnListItem>
                                </suggestionRows>
                            </Input>

                            <!-- Company Code -->
                            <Label text="{i18n>CompanyCode}" />
                            <ComboBox
                                id="CompanyCodeCreateBP"
                                selectedKey="{createBP>/CompanyCode}"
                                items="{
                                          path: '/CompanyCodes',
                                          sorter: { path: 'CompanyCode' }}"
                            >
                                <core:Item
                                    id="itemCompanyCodes"
                                    key="{CompanyCode}"
                                    text="{CompanyCode} {CompanyCodeName}"
                                />
                            </ComboBox>
                            <!-- Sales Organisation -->
                            <Label text="{i18n>SalesOrganization}" />
                            <ComboBox
                                id="salesOrganisationCreateBP"
                                selectedKey="{createBP>/SalesOrganization}"
                                items="{
                                          path: '/SalesOrganizations',
                                          sorter: { path: 'SalesOrganization' }}"
                            >
                                <core:Item
                                    id="itemSalesOrganizations"
                                    key="{SalesOrganization}"
                                    text="{SalesOrganization} {SalesOrganization_Text}"
                                />
                            </ComboBox>
                            <!-- Distribution Channel -->
                            <Label text="{i18n>DistributionChannel}" />
                            <ComboBox
                                id="DistributionChannelCreateBP"
                                selectedKey="{createBP>/DistributionChannel}"
                                items="{
                                          path: '/DistributionChannel',
                                          sorter: { path: 'DistributionChannel' }}"
                            >
                                <core:Item
                                    id="itemDistributionChannel"
                                    key="{DistributionChannel}"
                                    text="{DistributionChannel} {DistributionChannel_Text}"
                                />
                            </ComboBox>
                            <!-- Division -->
                            <Label text="{i18n>Division}" />
                            <ComboBox
                                id="DivisionCreateBP"
                                selectedKey="{createBP>/Division}"
                                items="{
                                          path: '/Division',
                                          sorter: { path: 'Division' }}"
                            >
                                <core:Item
                                    id="itemDivision"
                                    key="{Division}"
                                    text="{Division} {Division_Text}"
                                />
                            </ComboBox>
                        </f:content>
                    </f:SimpleForm>
                </IconTabFilter>
                <!-- Address Tab -->
                <IconTabFilter
                    text="{i18n>Address}"
                    key="{i18n>Address}"
                >
                    <f:SimpleForm
                        id="SFAddress"
                        editable="true"
                        layout="ResponsiveGridLayout"
                        labelSpanXL="3"
                        labelSpanL="3"
                        labelSpanM="3"
                        labelSpanS="12"
                        adjustLabelSpan="false"
                        emptySpanXL="4"
                        emptySpanL="4"
                        emptySpanM="4"
                        emptySpanS="0"
                        columnsXL="1"
                        columnsL="1"
                        columnsM="1"
                        singleContainerFullSize="false"
                    >
                        <Label
                            text="{i18n>CustomerFirstName}"
                            visible="{createBP>/isCustomerFirstNameEnabled}"
                            required="true"
                        />
                        <Input
                            value="{createBP>/CustomerFirstName}"
                            visible="{createBP>/isCustomerFirstNameEnabled}"
                        />
                        <Label
                            text="{i18n>CustomerLastName}"
                            visible="{createBP>/isCustomerLastNameEnabled}"
                            required="true"
                        />
                        <Input
                            value="{createBP>/CustomerLastName}"
                            visible="{createBP>/isCustomerLastNameEnabled}"
                        />
                        <Label
                            text="{i18n>Name}"
                            visible="{createBP>/isNameEnabled}"
                            required="true"
                        />
                        <Input
                            value="{createBP>/OrganizationName}"
                            visible="{createBP>/isNameEnabled}"
                        />
                        <Label text="{i18n>Street1}" />
                        <Input value="{createBP>/Street1}" />
                        <Label text="{i18n>Street2}" />
                        <Input value="{createBP>/Street2}" />
                        <Label text="{i18n>City}" />
                        <Input value="{createBP>/City}" />
                        <Label text="{i18n>PostCode}" />
                        <Input value="{createBP>/PostCode}" />
                        <Label text="{i18n>Country}" />
                        <ComboBox
                            id="CountryCreateBP"
                            selectedKey="{createBP>/Country}"
                            items="{
                                      path: '/Country',
                                       length: 500,
                                      sorter: { path: 'Country' }}"
                        >
                            <core:Item
                                id="itemCountry"
                                key="{Country}"
                                text="{Country} {Country_Text}"
                            />
                        </ComboBox>
                    </f:SimpleForm>
                </IconTabFilter>
                <!-- Contacts Tab -->
                <IconTabFilter
                    text="{i18n>Contacts}"
                    key="Contacts"
                >
                    <f:SimpleForm
                        id="SFContacts"
                        editable="true"
                        layout="ResponsiveGridLayout"
                        labelSpanXL="3"
                        labelSpanL="3"
                        labelSpanM="3"
                        labelSpanS="12"
                        adjustLabelSpan="false"
                        emptySpanXL="4"
                        emptySpanL="4"
                        emptySpanM="4"
                        emptySpanS="0"
                        columnsXL="1"
                        columnsL="1"
                        columnsM="1"
                        singleContainerFullSize="false"
                    >
                        <Label text="{i18n>FinanceContact}" />
                        <ComboBox
                            id="FinanceContactBP"
                            selectedKey="{createBP>/FinanceContact}"
                            items="{
                                      path: '/CustomerContactPersons',
                                       length: 500,
                                      sorter: { path: 'ContactPerson' }}"
                        >
                            <core:Item
                                id="itemBusinessPartnerToBPRole"
                                key="{ContactPerson}"
                                text="{ContactPerson} {LastName} {FirstName}"
                            />
                        </ComboBox>

                        <Label text="{i18n>Email}" />
                        <Input value="{createBP>/Email}" />
                        <Label text="{i18n>EmailFinance}" />
                        <Input value="{createBP>/EmailFinance}" />
                        <Label text="{i18n>TelNumber1}" />
                        <Input value="{createBP>/TelephoneNumber}" />
                        <Label text="{i18n>TelNumber2}" />
                        <Input value="{createBP>/CellphoneNumber}" />
                    </f:SimpleForm>
                </IconTabFilter>
                <!-- VAT Details Tab -->
                <IconTabFilter
                    text="{i18n>AdditionalDetails}"
                    key="VatDetails"
                >
                    <f:SimpleForm
                        id="SFVATDetails"
                        layout="ResponsiveGridLayout"
                        columnsM="2"
                        columnsL="2"
                        columnsXL="3"
                    >
                        <Label text="{i18n>AccountAssignment}" />
                        <ComboBox
                            id="CustomerAccountAssignmentGroupBP"
                            selectedKey="{createBP>/AccountAssignment}"
                            items="{
                                      path: '/AccountAssignment',
                                       length: 500,
                                      sorter: { path: 'CustomerAccountAssignmentGroup' }}"
                        >
                            <core:Item
                                id="itemCustomerAccountAssignmentGroup"
                                key="{CustomerAccountAssignmentGroup}"
                                text="{CustomerAccountAssignmentGroup} {CustomerAccountAssgmtGrpName}"
                            />
                        </ComboBox>
                        <Label text="{i18n>VatRegistration}" />
                        <Input value="{createBP>/VatRegistration}" />
                        <Label text="{i18n>CompanyRegistration}" />
                        <Input value="{createBP>/CompanyRegistration}" />
                        <Label text="{i18n>Currency}" />
                        <ComboBox
                            id="CurrencyBP"
                            selectedKey="{createBP>/Currency}"
                            items="{
                                      path: '/Currency',
                                        length: 500,
                                      sorter: { path: 'Currency' }}"
                        >
                            <core:Item
                                id="itemCurrency"
                                key="{Currency}"
                                text="{Currency} {Currency_Text}"
                            />
                        </ComboBox>
                        <Label text="{i18n>BusinessPartnerGrouping}" />
                        <ComboBox
                            id="BusinessPartnerGroupingBP"
                            selectedKey="{createBP>/BusinessPartnerGrouping}"
                            items="{
                                      path: '/BusinessPartnerGrouping',
                                       length: 500,
                                      sorter: { path: 'BusinessPartnerGrouping' }}"
                        >
                            <core:Item
                                id="itemBusinessPartnerGrouping"
                                key="{BusinessPartnerGrouping}"
                                text="{BusinessPartnerGrouping} {BusinessPartnerGrouping_Text}"
                            />
                        </ComboBox>
                        <Label text="{i18n>CustomerAccountGroup}" />
                        <ComboBox
                            id="CustomerAccountGroupBP"
                            selectedKey="{createBP>/CustomerAccountGroup}"
                            items="{
                                      path: '/CustomerAccountGroup',
                                       length: 500,
                                      sorter: { path: 'CustomerAccountGroup' }}"
                        >
                            <core:Item
                                id="itemCustomerAccountGroup"
                                key="{CustomerAccountGroup}"
                                text="{CustomerAccountGroup} {CustomerAccountGroup_Text}"
                            />
                        </ComboBox>

                        <core:Title />
                        <Label text="{i18n>ContractValue}" />
                        <Input value="{createBP>/ContractValue}" />
                        <Label
                            text="{i18n>Department}"
                            visible="false"
                        />
                        <Input
                            value="{createBP>/Department}"
                            visible="false"
                        />
                        <Label text="{i18n>SalesOffice}" />
                        <ComboBox
                            id="SalesOfficeBP"
                            selectedKey="{createBP>/SalesOffice}"
                            items="{
                                      path: '/SalesOffice',
                                       length: 500,
                                      sorter: { path: 'SalesOffice' }}"
                        >
                            <core:Item
                                id="itemSalesOffice"
                                key="{SalesOffice}"
                                text="{SalesOffice} {SalesOffice_Text}"
                            />
                        </ComboBox>
                        <Label text="{i18n>RequestedBy}" />
                        <ComboBox
                            id="RequestedByBP"
                            selectedKey="{createBP>/RequestedBy}"
                            items="{
                                      path: '/UserDetails',
                                       length: 500,
                                      sorter: { path: 'ContactCardID' }}"
                        >
                            <core:Item
                                id="itemContactCardID"
                                key="{ContactCardID}"
                                text="{ContactCardID} {FullName}"
                            />
                        </ComboBox>

                        <Label text="{i18n>AuthoriserSelected}" />
                        <ComboBox
                            id="AuthoriserSelectedBP"
                            selectedKey="{createBP>/AuthoriserSelected}"
                            items="{
                                      path: '/UserDetails',
                                       length: 500,
                                      sorter: { path: 'ContactCardID' }}"
                        >
                            <core:Item
                                id="itemAuthoriserSelected"
                                key="{ContactCardID}"
                                text="{ContactCardID} {FullName}"
                            />
                        </ComboBox>
                        <Label text="{i18n>DateTimeRequested}" />
                        <DateTimePicker value="{createBP>/DateTimeRequested}" />
                    </f:SimpleForm>
                </IconTabFilter>
            </items>
        </IconTabBar>
        <!-- Footer with Buttons -->
        <footer>
            <Toolbar>
                <ToolbarSpacer />
                <Button
                    text="{i18n>Submit}"
                    type="Emphasized"
                    press="Submit"
                />
                <Button
                    text="{i18n>Cancel}"
                    press="Cancel"
                />
            </Toolbar>
        </footer>
    </Dialog>
</core:FragmentDefinition>
